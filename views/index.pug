    script.
      //- var dependencies = []
      System.config({
        map: {
          'zepto': 'zepto/dist/zepto.js',
          'document-register-element': 'document-register-element/build/document-register-element.js',
          'fetch': 'whatwg-fetch/fetch.js'
        },
        bundles: { 'javascripts/custom-elements.js':
           [ 'javascripts/custom-elements/product-list/endless-list-fetcher.js',
             'javascripts/custom-elements/product-list/index.js',
             'javascripts/custom-elements/product.js' ] }
      })

      const dependencies = [SystemJS.import('document-register-element')]

      if (typeof fetch !== 'function') dependencies.push(SystemJS.import('fetch'))

      Promise.all(dependencies)
        .then(() => SystemJS.import('./javascripts/main.js'))
